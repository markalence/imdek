<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rectangle_border"
    android:layout_marginBottom="5dp"
    android:orientation="vertical">


    <TextView
        android:id="@+id/searchHoursRecord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:paddingHorizontal="2dp"
        android:text="TextView"
        app:layout_constraintHorizontal_weight="0.025"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/searchDateRecord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        android:maxLines="1"
        android:paddingHorizontal="2dp"
        android:text="TextView"
        app:layout_constraintHorizontal_weight="0.1"
        app:layout_constraintStart_toEndOf="@+id/searchHoursRecord"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/searchModuleRecord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        android:gravity="center|center_vertical"
        android:paddingHorizontal="1dp"
        android:text="TextView"
        app:layout_constraintHorizontal_weight="0.225"
        app:layout_constraintStart_toEndOf="@+id/searchDateRecord"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/searchCommentRecord"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:layout_marginEnd="60dp"
        android:layout_marginHorizontal="0dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        android:paddingBottom="3dp"
        android:paddingLeft="4dp"
        android:paddingTop="0dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="0.65"
        app:layout_constraintStart_toEndOf="@+id/searchModuleRecord"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>