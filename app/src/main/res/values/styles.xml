<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorForeground">@color/foreground_material_light</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.Picker" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:colorControlNormal">@android:color/white</item>
    </style>

    <style name="mySpinnerItemStyle" parent="@style/Base.Widget.AppCompat.ListView.DropDown">
        <item name="android:tint">@android:color/white</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="BackArrowWhite" parent="AppTheme">
        <item name="android:colorForeground">@android:color/white</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="CustomDialogTheme" parent="Theme.AppCompat.Light.NoActionBar" />

    <style name="SignupTheme" parent="Theme.AppCompat.NoActionBar" >
        <item name="colorAccent">@color/accent_material_dark_1</item>
    </style>


</resources>
